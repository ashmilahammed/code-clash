{
  "compilerOptions": {
    "target": "ES2020",
    // "module": "commonjs",
    "module" : "node16",

    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // For nodejs:
    "lib": ["esnext"],
    "types": ["node"],
    "moduleResolution": "node16",

    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}





